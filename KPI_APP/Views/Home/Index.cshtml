@model IEnumerable<KPI_APP.Models.KPI_Item>

@{
    var date = (DateTime)ViewBag.Date;
}


@if (string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success" style="display:none;">Save Successful</div>
}


@if (string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" style="display:none;">Save Faild</div>
}

<p></p>

<div class="body-content">

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">
            <h4>@ViewBag.Error</h4>
        </div>
    }

    <form class="form-inline text-center">
        <div class="col-12 col-lg-8 col-md-12 col-sm-12">
            <h4 class="alert alert-warning"><i class="fas fa-calendar-alt"></i> Year : @date.Year - Month : @date.Month</h4>
        </div>
        <div class="col-2 col-lg-2 col-md-6 col-sm-12">
            <a onclick="save(); return false;" class="btn btn-success mb-2 btn-block">
                <i class="fa fa-save"></i> Save
            </a>
        </div>
        <div class="col-2 col-lg-2 col-md-6 col-sm-12">
            <a onclick="save(true); return false;" class="btn btn-primary mb-2 btn-block">
                <i class="fa fa-upload"></i> Submit & Close
            </a>
        </div>
    </form>

    <p></p>

    <div class="form-group" style="overflow-y:auto;">

        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Department</th>
                        <th>Title</th>
                        <th>Remarks</th>
                        <th>KPI Value</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label>
                                    @item.Excel_Department.Name
                                </label>
                                <input type="hidden" value="@item.Id" />
                            </td>
                            <td>
                                <label>
                                    @item.Title
                                    <input type="hidden" value="@item.Row" />
                                </label>
                            </td>
                            <td>
                                <label>@item.Remarks</label>
                            </td>

                            @{ var format = item.Format == "time" ? "type=text" : "type=number"; }

                            @if (date.Month == 1)
                            {
                                <td><input type="text" value="@item.Jan" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 2)
                            {
                                <td><input type="text" value="@item.Feb" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 3)
                            {
                                <td><input type="text" value="@item.Mar" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 4)
                            {
                                <td><input type="text" value="@item.Apr" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 5)
                            {
                                <td><input type="text" value="@item.May" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 6)
                            {
                                <td><input type="text" value="@item.Jun" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 7)
                            {
                                <td><input type="text" value="@item.Jul" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 8)
                            {
                                <td><input type="text" value="@item.Aug" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 9)
                            {
                                <td><input type="text" value="@item.Sep" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 10)
                            {
                                <td><input type="text" value="@item.Oct" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 11)
                            {
                                <td><input type="text" value="@item.Nov" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                            @if (date.Month == 12)
                            {
                                <td><input type="text" value="@item.Dec" class="form-control" required @(!item.HasIbox ? "" : "disabled='disabled'") /></td>
                            }

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>


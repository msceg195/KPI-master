</div>


<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <h3 class="modal-title">Please wait ...</h3>

                <div class="progress">
                    <div class="progress-bar progress-bar-animated progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="10" aria-valuemax="100" style="width: 45%">
                        <span class="sr-only">45% Complete</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">

    function save(isClose) {
        var rows = [];

        $('table tbody tr').not(':hidden').each(function () {

            if ($(this).find('td:eq(1) input') == null ||
                $(this).find('td:eq(1) input') == undefined) return true;

            rows.push({
                Id: $.trim($(this).find('td:eq(0) input').val()),
                Row: $.trim($(this).find('td:eq(1) input').val()),
                Title: $.trim($(this).find('td:eq(1) label').text()),
                Department: $.trim($(this).find('td:eq(0) label').text()),
                Remarks: $.trim($(this).find('td:eq(2) label').text()),
                Jan: $.trim($(this).find('td:eq(3) input').val()),
                Feb: $.trim($(this).find('td:eq(4) input').val()),
                Mar: $.trim($(this).find('td:eq(5) input').val()),
                Apr: $.trim($(this).find('td:eq(6) input').val()),
                May: $.trim($(this).find('td:eq(7) input').val()),
                Jun: $.trim($(this).find('td:eq(8) input').val()),
                Jul: $.trim($(this).find('td:eq(9) input').val()),
                Aug: $.trim($(this).find('td:eq(10) input').val()),
                Sep: $.trim($(this).find('td:eq(11) input').val()),
                Oct: $.trim($(this).find('td:eq(12) input').val()),
                Nov: $.trim($(this).find('td:eq(13) input').val()),
                Dec: $.trim($(this).find('td:eq(14) input').val())
            });
        });

        if (rows.length == 0) return false;

        $.ajax({
            type: "POST",
            url: "/Home/Save",
            data: { "Items": rows, "IsClose": isClose },
            success: function (result) {
                $('.alert-success').show();
                $('.alert-danger').hide();

                if (isClose) window.location = window.location;
            },
            error: function (xhr) {
                $('.alert-danger').show();
                $('.alert-success').hide();
            }
        });
    }

</script>
